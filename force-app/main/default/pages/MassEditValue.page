<apex:page standardController="value__c" recordSetVar="unused" sidebar="false">
  <apex:form >
    <apex:pageBlock >
      <apex:pageBlockButtons location="top">
        <apex:commandButton value="保存" action="{!save}"/>
        <apex:commandButton value="返回" action="{!cancel}"/>
      </apex:pageBlockButtons>
      <apex:pageBlockTable value="{!selected}" var="v" id="table">
        <apex:column headerValue="{!$ObjectType.value__c.fields.Name.label}">
          <apex:outputField value="{!v.Name}"/>
        </apex:column>
        
        <apex:column headerValue="{!$ObjectType.value__c.fields.valuePoint__c.label}">
          <apex:inputField required="true" value="{!v.valuePoint__c}"/>
        </apex:column>
        <apex:column headerValue="{!$ObjectType.value__c.fields.advantage__c.label}">
          <apex:inputField required="false" value="{!v.advantage__c}"/>
        </apex:column>
        <apex:column headerValue="{!$ObjectType.value__c.fields.valuePoint__c.label}">
          <apex:inputField required="false" value="{!v.valuePoint__c}"/>
        </apex:column>
        <apex:column headerValue="{!$ObjectType.value__c.fields.disadvantage__c.label}">
          <apex:inputField value="{!v.disadvantage__c}"/>
        </apex:column>
        <apex:column headerValue="{!$ObjectType.value__c.fields.valueProposition__c.label}">
          <apex:inputField value="{!v.valueProposition__c}"/>
        </apex:column>  
      </apex:pageBlockTable>
    </apex:pageBlock>
  </apex:form>
</apex:page>