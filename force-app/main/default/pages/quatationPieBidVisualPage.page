<apex:page standardController="quatation__c" title="Pie Chart" extensions="PieBidChadrtController">
    <div style="text-align:center;font-size: 20px;"><h1>投标价饼图</h1></div>
    <apex:chart height="200" width="100%" data="{!pDate}">
        <apex:pieSeries dataField="data" labelField="name" tips="true" highlight="true" colorSet="#CD2626,#D4D4D4,#D1EEEE,#CDCDB4,#E6E6FA,#CDC673,#CD8C95,#EEB4B4" >
            <apex:chartLabel display="outside" field="lablename" font="12pt" /> 
            <apex:chartTips width="100" height="50" valueField="data" labelField="name"/>
        </apex:pieSeries>
       
        <apex:legend position="right" />
    </apex:chart>
</apex:page>